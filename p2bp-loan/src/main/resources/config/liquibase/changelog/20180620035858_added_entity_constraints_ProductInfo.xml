<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity ProductInfo.
    -->
    <changeSet id="20180620035858-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="product_info"
                                 constraintName="fk_product_info_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="spec_id"
                                 baseTableName="product_info"
                                 constraintName="fk_product_info_spec_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product_spec"/>

    </changeSet>
</databaseChangeLog>
